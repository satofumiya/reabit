<header class="container-fluid sticky-top bg-white border border-light border-5">
      <% if flash[:notice] %>
        <div class="alert alert-info">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <div class="header d-flex container-fluid justify-content-between flex-wrap col-12">
        <div class="d-flex align-items-center col-6">
          <%= image_tag "Reabit-logo.png", class: "img", id:"logo"%>
          <h4>Reabit</h4>
        </div>
        <div class="d-flex justify-content-end">
          <nav class="global-nav navbar navbar-expand-xl d-flex container-fluid align-items-center">
            <button class="navbar-toggle d-block d-xl-none">
              <i class="fas fa-bars" onclick="clickBtn1()" id="toggle-btn"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="d-flex", style="list-style: none;">
                <li class="nav-item mx-1">
                    <%= link_to "Home", root_path, class:'btn btn-outline-primary link' %>
                </li>
                <% if !user_signed_in? %>
                  <li class="nav-item mx-1">
                    <%= link_to "ログイン",new_user_session_path , class:'btn btn-outline-primary' %>
                  </li>
                <% end %>
                <% if user_signed_in? %>
                  <li class="nav-item mx-1">
                    <%= link_to "本棚", booklists_path , class:'btn btn-outline-primary' %>
                  </li>
                  <li class="nav-item mx-1">
                    <%= link_to "ユーザーページ", page_path(current_user), class:'btn btn-outline-primary' %>
                  </li>
                  <li class="nav-item mx-1">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:'btn btn-outline-danger' %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="col-12 d-xl-none" id="nav_for_Hamburger">
              <ul class="d-flex flex-wrap", style="list-style: none;">
                <li class="nav-item mx-1 col-12">
                  <%= link_to "Home", root_path, class:'link' %>
                </li>
                <% if !user_signed_in? %>
                  <li class="nav-item mx-1 col-12">
                    <%= link_to "ログイン",new_user_registration_path , class:'link' %>
                  </li>
                <% end %>
                <% if user_signed_in? %>
                  <li class="nav-item mx-1 col-12">
                    <%= link_to "本棚", booklists_path , class:'link' %>
                  </li>
                  <li class="nav-item mx-1 col-12">
                    <%= link_to "ユーザーページ", page_path(current_user), class:'btn btn-outline-primary' %>
                  </li>
                  <li class="nav-item mx-1 col-12">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { confirm: '本当にログアウトしますか？' }, remote: true, class:'link' %>
                  </li>
                <% end %>
              </ul>
            </nav>
          </div>
        </div>
      </header>
